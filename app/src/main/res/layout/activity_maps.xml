<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/custom_lat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/transparent_green"
            android:ems="10"
            android:hint="@string/custom_lat_edit_text_hint"
            android:inputType="numberSigned|numberDecimal"
            android:singleLine="true"
            android:text="@string/custom_lat_default_text"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/custom_lon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/transparent_green"
            android:ems="10"
            android:hint="@string/custom_lon_edit_text_hint"
            android:inputType="numberSigned|numberDecimal"
            android:singleLine="true"
            android:text="@string/custom_lon_default_text"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/new_loc_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".5"
            android:adjustViewBounds="false"
            android:background="@color/transparent_green"
            android:src="@drawable/ic_location_searching_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:contentDescription="@string/new_location_button_desc" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/center_on_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_my_location_black_50dp"
        android:tint="@color/colorAccent"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/center_on_location_button_content_desc" />

    <ImageButton
        android:id="@+id/add_pin_at_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_add_circle_outline_black_50dp"
        android:tint="@color/colorPrimary"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintEnd_toStartOf="@+id/map"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toEndOf="@+id/map"
        android:contentDescription="@string/add_pin_at_location_button_desc" />
</android.support.constraint.ConstraintLayout>